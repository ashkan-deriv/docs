{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Active Symbols Response",
  "description": "Response for active_symbols request, containing list of active symbols",
  "type": "object",
  "properties": {
    "active_symbols": {
      "type": "array",
      "description": "List of active symbols.",
        "items": {
        "type": "object",
        "properties": {
          "close_only": {
            "type": "integer",
            "description": "`1` if symbol is close only, `0` if not"
          },
          "display_order": {
            "type": "integer",
            "description": "Display order."
          },
          "exchange_is_open": {
            "type": "integer",
            "description": "`1` if market is currently open, `0` if closed."
          },
          "is_trading_suspended": {
            "type": "integer",
            "description": "`1` indicates that trading is currently suspended, `0` if not."
          },
          "market": {
            "type": "string",
            "description": "Market category (forex, indices, etc)."
          },
          "pip": {
            "type": "number",
            "description": "Pip size (i.e. minimum fluctuation amount)."
          },
          "pip_size": {
            "type": "number",
            "description": "Pip size (i.e. minimum fluctuation amount)."
          },
          "subgroup": {
            "type": "string",
            "description": "Subgroup name."
          },
          "submarket": {
            "type": "string",
            "description": "Submarket name."
          },
          "underlying_symbol": {
            "type": "string",
            "description": "The symbol code for this underlying."
          },
          "underlying_symbol_type": {
            "type": "string",
            "description": "Symbol type (forex, commodities, etc)."
          },
          "note": {
            "type": "string",
            "description": "Informational note (used in truncated example responses)"
          }
        }
      }
    },
    "echo_req": {
      "type": "object",
      "description": "Echo of the request made."
    },
    "msg_type": {
      "type": "string",
      "description": "Action name of the request made.",
      "enum": ["active_symbols"]
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field sent in request to map to response, present only when request contains `req_id`."
    }
  },
  "required": ["active_symbols", "msg_type"],
  "additionalProperties": false
}

