{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Portfolio Response",
  "description": "Response for portfolio request, containing current account's open positions",
  "type": "object",
  "properties": {
    "portfolio": {
      "type": "object",
      "description": "Current account's open positions.",
      "properties": {
        "contracts": {
          "type": "array",
          "description": "List of open positions.",
          "items": {
            "type": "object",
            "properties": {
              "app_id": {
                "type": "integer",
                "description": "ID of the application that purchased the contract"
              },
              "buy_price": {
                "type": "number",
                "description": "Buy price"
              },
              "contract_id": {
                "type": "integer",
                "description": "Internal contract identifier number (to be used in a `proposal_open_contract` API call)."
              },
              "contract_type": {
                "type": "string",
                "description": "Contract type"
              },
              "currency": {
                "type": "string",
                "description": "Contract currency"
              },
              "date_start": {
                "type": "integer",
                "description": "Epoch of start date"
              },
              "expiry_time": {
                "type": "integer",
                "description": "Epoch of expiry time"
              },
              "longcode": {
                "type": "string",
                "description": "Contract description"
              },
              "payout": {
                "type": "number",
                "description": "Payout price"
              },
              "purchase_time": {
                "type": "integer",
                "description": "Epoch of purchase time"
              },
              "shortcode": {
                "type": "string",
                "description": "Contract short code description"
              },
              "transaction_id": {
                "type": "integer",
                "description": "It is the transaction ID. Every contract (buy or sell) and every payment has a unique ID."
              },
              "underlying_symbol": {
                "type": "string",
                "description": "Symbol code"
              }
            },
            "required": [
              "buy_price",
              "contract_id",
              "contract_type",
              "currency",
              "date_start",
              "expiry_time",
              "longcode",
              "payout",
              "purchase_time",
              "shortcode",
              "transaction_id",
              "underlying_symbol"
            ]
          }
        }
      },
      "required": ["contracts"]
    },
    "echo_req": {
      "type": "object",
      "description": "Echo of the request made."
    },
    "msg_type": {
      "type": "string",
      "description": "Action name of the request made.",
      "enum": ["portfolio"]
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field sent in request to map to response, present only when request contains `req_id`."
    }
  },
  "required": ["portfolio", "msg_type"],
  "additionalProperties": false
}

