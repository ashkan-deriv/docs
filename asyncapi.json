{
  "asyncapi": "3.0.0",
  "info": {
    "title": "Deriv WebSocket API - Balance",
    "version": "1.0.0",
    "description": "Get account balance via WebSocket"
  },
  "servers": {
    "demo": {
      "host": "demov2.derivws.com/websockets/v3",
      "protocol": "wss"
    }
  },
  "channels": {
    "balance": {
      "messages": {
        "balanceRequest": {
          "payload": {
            "type": "object",
            "properties": {
              "balance": {
                "type": "integer"
              },
              "subscribe": {
                "type": "integer"
              },
              "req_id": {
                "type": "integer"
              }
            }
          }
        },
        "balanceResponse": {
          "payload": {
            "type": "object",
            "properties": {
              "echo_req": {
                "type": "object"
              },
              "balance": {
                "type": "object"
              },
              "msg_type": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "operations": {
    "send": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/balance"
      },
      "messages": [
        {
          "$ref": "#/channels/balance/messages/balanceRequest"
        }
      ]
    },
    "receive": {
      "action": "receive",
      "channel": {
        "$ref": "#/channels/balance"
      },
      "messages": [
        {
          "$ref": "#/channels/balance/messages/balanceResponse"
        }
      ]
    }
  }
}
